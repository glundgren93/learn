{
	"name": "@glundgren93/learn",
	"version": "0.1.0",
	"description": "AI-powered programming learning CLI with test-driven lessons",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"learn": "./dist/index.js",
		"learn-cli": "./dist/index.js"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsc && chmod +x dist/index.js",
		"dev": "tsx src/index.ts",
		"test": "vitest",
		"test:run": "vitest run",
		"start": "node dist/index.js",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"prepublishOnly": "npm run test:run && npm run build"
	},
	"keywords": [
		"learning",
		"cli",
		"programming",
		"education",
		"ai",
		"openai",
		"test-driven",
		"tdd"
	],
	"author": "glundgren93",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/glundgren93/learn.git"
	},
	"homepage": "https://github.com/glundgren93/learn#readme",
	"bugs": {
		"url": "https://github.com/glundgren93/learn/issues"
	},
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"chalk": "^5.0.0",
		"commander": "^12.0.0",
		"dotenv": "^16.3.0",
		"inquirer": "^9.0.0",
		"openai": "^4.0.0",
		"ora": "^8.0.0",
		"zod": "^3.22.0",
		"zod-to-json-schema": "^3.22.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@types/inquirer": "^9.0.0",
		"@types/node": "^20.0.0",
		"tsx": "^4.0.0",
		"typescript": "^5.3.0",
		"vitest": "^2.0.0"
	}
}
