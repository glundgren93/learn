{
	"name": "learn-cli",
	"version": "1.0.0",
	"description": "AI-powered programming learning CLI with test-driven lessons",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"learn": "./dist/index.js"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsx src/index.ts",
		"test": "vitest",
		"test:run": "vitest run",
		"start": "node dist/index.js",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --write ."
	},
	"keywords": [
		"learning",
		"cli",
		"programming",
		"education"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"chalk": "^5.0.0",
		"commander": "^12.0.0",
		"dotenv": "^16.3.0",
		"inquirer": "^9.0.0",
		"openai": "^4.0.0",
		"ora": "^8.0.0",
		"zod": "^3.22.0",
		"zod-to-json-schema": "^3.22.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@types/inquirer": "^9.0.0",
		"@types/node": "^20.0.0",
		"tsx": "^4.0.0",
		"typescript": "^5.3.0",
		"vitest": "^2.0.0"
	}
}
